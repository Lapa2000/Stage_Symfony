{% extends 'base.html.twig' %}

{% block title %}Recrutement index{% endblock %}

{% block body %}
    <h1>Recrutement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Idemp</th>
                <th>Datedebut</th>
                <th>Fichier</th>
                <th>Creepar</th>
                <th>Datecreation</th>
                <th>Datemodification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recrutement in recrutements %}
            <tr>
                <td>{{ recrutement.id }}</td>
                <td>{{ recrutement.code }}</td>
                <td>{{ recrutement.titre }}</td>
                <td>{{ recrutement.description }}</td>
                <td>{{ recrutement.idemp }}</td>
                <td>{{ recrutement.datedebut ? recrutement.datedebut|date('Y-m-d') : '' }}</td>
                <td>{{ recrutement.fichier }}</td>
                <td>{{ recrutement.creepar }}</td>
                <td>{{ recrutement.datecreation ? recrutement.datecreation|date('Y-m-d') : '' }}</td>
                <td>{{ recrutement.datemodification ? recrutement.datemodification|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_recrutement_show', {'id': recrutement.id}) }}">show</a>
                    <a href="{{ path('app_recrutement_edit', {'id': recrutement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recrutement_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Superheroes{% endblock %}

{% block body %}
    <h1>Superheroes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ superhero.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ superhero.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ superhero.slug }}</td>
            </tr>
            <tr>
                <th>Featured</th>
                <td>{{ superhero.featured }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ superhero.createdAt ? superhero.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_superheroes_index') }}">back to list</a>

    <a href="{{ path('app_superheroes_edit', {'id': superhero.id}) }}">edit</a>

    {{ include('superheroes/_delete_form.html.twig') }}
{% endblock %}
